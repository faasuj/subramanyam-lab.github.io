---
layout: page
---
<style>
  .people {
    margin-bottom: 2.5rem;
    display: flex;
    align-items: flex-start;
    gap: 2rem;
  }
  .people img {
    width: 363px;
    height: 400px;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
    background: #fff;
    margin-right: 2rem;
  }
  .more-info {
    margin-top: 0.5rem;
  }
  @media (max-width: 768px) {
    .people {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }
    .people img {
      margin-right: 0;
      margin-bottom: 1rem;
    }
  }
</style>

<div class="post">
  <article>
    {% if page.profiles %}
      {% for profile_type in page.profiles %}
        <h2>{{ profile_type[0] }}</h2>
        {% assign profiles = profile_type[1] %}
        {% for people in profiles %}
          <hr>
          <div class="people float-{% if people.align == 'left' %}left{% else %}right{% endif %}">
            {% if people.image %}
              {% assign profile_image_path = people.image | prepend: 'assets/img/team' %}
              <img src="{{ profile_image_path }}" alt="{{ people.image }}" class="img-fluid z-depth-1 rounded">
            {% endif %}
            <div>
              {% if people.more_info %}
                <div class="more-info">{{ people.more_info }}</div>
              {% endif %}
              {% if people.content %}
                {% capture profile_content %}{% include_relative {{ people.content }} %}{% endcapture %}
                {{ profile_content | markdownify }}
              {% endif %}
            </div>
          </div>
          <div class="clearfix"></div>
        {% endfor %}
      {% endfor %}
    {% endif %}

    <div class="clearfix">{{ content }}</div>
  </article>
</div>
